{
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3",
        "psr/log": "^1.1",
        "symfony/console": "^4.2",
        "symfony/monolog-bundle": "^3.3",
        "symfony/yaml": "^4.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Wikimedia\\Phester\\": "src",
            "Wikimedia\\Phester\\Console\\": "src"
        }
    },
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "25.0.0",
        "jakub-onderka/php-parallel-lint": "^1.0"
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "phpcs -p -s"
        ],
        "fix": "phpcbf"
    }
}
